<div class="">All Products</div>

<div class="card">
  <div>

    <h3 class="text-white">
      Name:
    </h3>
    <p class="text-white mt-2">
      <%= @product.name %>
    </p>


    <h3 class="text-white">
      Description:
    </h3>
    <p class="text-white mt-2">
      <%= @product.description %>
    </p>


    <h3 class="pr-3 text-white">
      Category:
    </h3>
    <p class="text-white mt-2">
      <%= @product.category %>
    </p>

    <div class="image-container">
      <% (0...@product.images.count).each do |image| %>
      <div class="images">
        <%= image_tag(@product.images[image], data_zoom_image: @product.images)%>
      </div>
    </div>
    <%end%>

    <%= link_to 'Edit', edit_product_path(@product), class:'show-btn ' %> |
    <%= link_to 'Back', products_path, class:'show-btn'%>
  </div>
</div>