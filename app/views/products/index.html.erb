<p id="notice"><%= notice %></p>

<h1 class="text-white text-center mb-5">All Products</h1>

<div class=" card col-md-4 h-100 mt-5">
  <div class="card-body text-black">
    <% @products.each do |product| %>
    <h3 class="card-title mt-3 text-dark"><%= product.name %></h3>
    <%= image_tag(product.images[0],class:"mt-3 mb-3" ) if product.images.length > 0%>
    <p class="text-dark text-left"> <%= product.description %> </p>
    <p class="text-dark text-left">$1200</p>
    <button class="btn">Buy Now</button>
    <div>

    </div>
    <% end %>
  </div>
</div>